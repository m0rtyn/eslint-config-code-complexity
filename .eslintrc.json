{
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.vue"
      ],
      "excludedFiles": "*.spec.ts",
      "rules": {
        "complexity": [
          "error",
          5
        ],
        "max-params": [
          "error",
          4
        ],
        "max-statements": [
          "error",
          7
        ],
        "max-statements-per-line": [
          "error",
          {
            "max": 1
          }
        ],
        "max-nested-callbacks": [
          "error",
          2
        ],
        "max-depth": [
          "error",
          {
            "max": 3
          }
        ],
        "max-lines": [
          "error",
          {
            "max": 150,
            "skipBlankLines": true,
            "skipComments": true
          }
        ]
      }
    }
  ]
}